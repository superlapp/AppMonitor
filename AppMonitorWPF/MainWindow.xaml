<Window x:Class="AppMonitorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="481.5" Width="798.5" Activated="Window_Activated" Icon="appIconWPF.ico">
    <Grid>
        <DatePicker x:Name="eventDatePicker" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="label" Content="Date filter:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="getEventsBtn" Content="Get events" HorizontalAlignment="Left" Margin="215,41,0,0" VerticalAlignment="Top" Width="200" Height="24" Click="getEventsBtn_Click"/>
        <TabControl Margin="10,70,10,10">
            <TabItem Header="Report">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="reportListView" Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date"
                                                DisplayMemberBinding="{Binding EventDate, StringFormat='dd.MM.yyyy'}"
                                                Width="100"/>
                                <GridViewColumn Header="Application"
                                                DisplayMemberBinding="{Binding ApplicationTitle}"
                                                Width="100"/>
                                <GridViewColumn Header="Total time"
                                                DisplayMemberBinding="{Binding WorkingTime}"
                                                Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Log">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="eventsGrid" Margin="10" SelectedCellsChanged="eventsGrid_SelectedCellsChanged"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
