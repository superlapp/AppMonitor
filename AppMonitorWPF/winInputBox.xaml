<Window x:Class="AppMonitorWPF.winInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppMonitorWPF"
        mc:Ignorable="d"
        Title="winInputBox" Height="142" Width="338" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Type new value:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" TabIndex="0"/>
        <TextBox x:Name="valueTextBox" Height="23" Margin="10,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="1"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="okButton_Click" TabIndex="2"/>
        <Button x:Name="cancelButton" Content="Cancel" Margin="0,0,10,10" IsCancel="True" TabIndex="3" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>
